<!DOCTYPE html>
<html>

<head>
    <style>
        table {
            border-collapse: collapse;
        }

        table,
        th,
        td {
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <div style="width: 85%; margin: 0 7.5%;">
        <div style="text-align: center; padding-left: 50px;">
            <h3>Student Report</h5>
                <table class="table table-striped table-hover table-borderless text-center sortable" id="patientTable">
                    <thead class="table-success">
                        <tr>
                            <th scope="col">N°</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Age</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Dérniere acte</th>
                            <th scope="col">Prochaine acte</th>
                        </tr>
                    </thead>
                    <tbody id="tablebody">

                        <% if (patients.length > 0) { %>
                        <% patients.forEach(patient => {%>
                        <tr>
                            <td><%= patient.lastname %></td>
                            <td><%= patient.firstname %></td>
                            <td><%= patient.age %></td>
                            <td><%= patient.gender %></td>
                            <td><%=patient.phone %></td>
                            <td><%= patient.birthdate %></td>
                            <td><%= patient.lastacte.acte%></td>
                            <td><%= moment(patient.lastacte.date)%></td>
                        </tr>
                        <%  });%>
                        <% }%>
                    </tbody>
                </table>
        </div>
    </div>
</body>

</html>