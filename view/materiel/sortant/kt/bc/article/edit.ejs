<button
  type="button"
  class="btn me-2 btn-outline-warning bg-gradient px-2 py-1"
  data-bs-toggle="modal"
  data-bs-target="#edit-<%= bc.id %>"
>
  <i class="bi bi-pencil-fill"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="edit-<%= bc.id %>"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modifier Matériel</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          required
        ></button>
      </div>

      <div class="modal-body">
        <form
          action="/kt/bc/<%= bc.id %>/<%=article.id%>?_method=PUT"
          id="personal"
          method="POST"
          class="needs-validation"
          novalidate
        >
          <div class="form-floating mb-3">
            <input
              class="form-control"
              id="designation"
              name="articles[designation]"
              list="materials"
              value="<%= article.designation %> "
              required
            />
            <datalist id="materials">
              <% for (material of materials) { %>
              <option class="option" value="<%= material.code %>">
                <%= material.designation %>
              </option>
              <%} %>
            </datalist>
            <label for="designation" class="form-labelfs-6">Désignation</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating mb-3">
            <input
              class="form-control"
              type="number"
              id="qte"
              name="articles[qte]"
              placeholder="Quantité"
              required
            />
            <label for="qte" class="form-labelfs-6">Quantité</label>
            <div class="valid-feedback">BIEN</div>
          </div>

          <div class="modal-footer mt-3">
            <button
              type="button"
              class="btn btn-outline-lightCoral bg-gradient"
              data-bs-dismiss="modal"
            >
              Annuler
            </button>
            <button
              type="submit"
              id="bc-register"
              class="btn btn-outline-warning bg-gradient"
            >
              Modifier
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $("#edit-<%= bc.id %>").on("shown.bs.modal", function () {
    $(this).find("[autofocus]").focus();
  });
</script>
