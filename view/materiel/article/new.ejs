<button
  type="button"
  class="btn me-2 btn-outline-success px-2 py-1"
  data-bs-toggle="modal"
  data-bs-target="#article-<%= materiel.id %>"
>
  <i class="bi bi-plus-lg"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="article-<%= materiel.id %>"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Ajouter Article</h5>

        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <form
          action="/materiel/<%=materiel.id%>/article"
          method="POST"
          class="needs-validation"
          novalidate
        >
        <div class="form-floating mb-3">
          <input
            class="form-control"
            type="date"
            id="dateachat"
            name="article[dateachat]"
            placeholder="date de l'achat"
            required
            autofocus
          />
          <label for="dateachat" class="form-labelfs-6">Date d'achat</label>
          <div class="valid-feedback">BIEN</div>
        </div>


        <div class="form-floating mb-3">
          <input
            id="articlecode"
            name="article[articleref]"
            type="text"
            class="form-control"
            style="text-transform: capitalize"
            autofocus
            required
          />
          <label for="articlelcode" class="form-label">REF</label>
          <div class="valid-feedback">BIEN</div>
        </div>

          <div class="form-floating mb-3">
            <input
              id="articledesignation"
              name="article[articledesignation]"
              type="text"
              class="form-control"
              style="text-transform: capitalize"
              autofocus
              required
            />
            <label for="articledesignation" class="form-label">Désignation</label>
            <div class="valid-feedback">BIEN</div>

        </div>

        <div class="form-floating mb-3">
          <input
            id="articlequantite"
            name="article[quantite]"
            type="text"
            class="form-control"
            style="text-transform: capitalize"
            autofocus
            required
          />
          <label for="articlequantite" class="form-label">Quantité</label>
          <div class="valid-feedback">BIEN</div>

      </div>

         

                      

          

          <div class="modal-footer mt-4">
            <button
              type="button"
              class="btn btn-outline-danger"
              data-bs-dismiss="modal"
            >
              Annuler
            </button>
            <button class="btn btn-outline-success">Ajouter</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
