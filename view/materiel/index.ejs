<% layout('layouts/boilerplate')%>

<div class="container mt-4">
  <div class="col m-auto bg-light rounded-5 p-2">
    <h3 class=" text-center text-success">Liste de Materiels KT</h3>
    <div class="d-flex mb-2 ">
        <%- include("./new")%> 
      <a
        class="btn btn-outline-secondary  ms-2"
        href="/materiel/generatepdf"
        target="_blank"
        >Imprimer <i class="bi bi-printer-fill py-3 px-2"></i>
      </a>
      
      
    </div>
  </div>
  <form class="d-flex mt-2">
    <input
      id="search"
      class="form-control mb-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
    />
  </form>

  <table
    class="table table-striped table-hover table-borderless text-center sortable"
    id="materielTable"
  >
    <thead class="table-success">
      <tr>
        <th  scope="col">N°</th>
        <th  scope="col">REF</th>
        <th  scope="col">Désignation</th>
        <th  scope="col">Qte Globale</th>
        <th  scope="col">Qte Consommé</th>
        <th  id="hide" scope="col">Action</th>
      </tr>
    </thead>
    <tbody id="tablebody">
      <% var i=1 %> <% for (materiel of materiels){%>

      <tr>
        <th
          class="clickable"
          onclick="window.location='/materiels/<%=materiel.id%>'"
          scope="row"
        >
          <%= i%><% i=i+1; %>
        </th>
        <td
          class="clickable"
          onclick="window.location='/materiels/<%=materiel.id%>'"
        >
          <%= materiel.code %>
        </td>
        <td
          class="clickable"
          onclick="window.location='/materiels/<%=materiel.id%>'"
        >
          <%=materiel.designation %>
        </td>
        <td
        class="clickable"
        onclick="window.location='/materiels/<%=materiel.id%>'"
        >
        <%=materiel.qteglobal %>
          
        </td>
        <td
        class="clickable"
        onclick="window.location='/materiels/<%=materiel.id%>'"
        >
      coming soon!
          
        </td>
          
       
        
        <th>
            <%- include("./article/new")%>
            <%- include("./edit")%>
            <%- include("./delete")%>
           
        </th>
      </tr>
      <% }%>
    </tbody>
  </table>
</div>
