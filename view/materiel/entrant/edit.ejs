<button type="button" class="btn me-2 btn-outline-warning bg-gradient px-2 py-1" data-bs-toggle="modal" data-bs-target="#edit-<%= materiel.id %>">
  <i class="bi bi-pencil-fill"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="edit-<%= materiel.id %>" data-bs-keyboard="true" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modifier Matériel</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" required></button>
      </div>

      <div class="modal-body">
        <form action="/materiels/<%= materiel.id %>/?_method=PUT" id="personal" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
          <div class="form-floating mb-3">
            <input id="materielcode" name="materiel[code]" type="text" class="form-control" style="text-transform: capitalize" required autofocus value="<%= materiel.code%>" />
            <label for="materielcode" class="form-label">Code</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating mb-3">
            <input id="materieldesignation" name="materiel[designation]" style="text-transform: capitalize" type="text" class="form-control" required value="<%= materiel.designation %>" />
            <label for="materieldesignation" class="form-label">Désignation</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <!-- Picture Upload -->
          <div class="col-12 input-group mb-3">
            <input type="file" class="form-control" id="picture" name="picture" required />
            <label class="input-group-text" for="pictures">Image</label>
          </div>



          <div class="modal-footer mt-3">
            <button type="button" class="btn btn-outline-lightCoral bg-gradient" data-bs-dismiss="modal">
              Annuler
            </button>
            <button type="submit" id="materiel-register" class="btn btn-outline-warning bg-gradient">
              Modifier
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $('#edit-<%= materiel.id %>').on('shown.bs.modal', function() {
    $(this).find('[autofocus]').focus();
  });
</script>