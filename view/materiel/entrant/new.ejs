<button
  id="item2"
  type="button"
  class="btn btn-outline-greenSea"
  data-bs-toggle="modal"
  data-bs-target="#newmateriel"
>
  <i class="bi bi-person-plus-fill me-2"></i>Ajouter
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="newmateriel"
  data-bs-keyboard="true"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content rounded-4 shadow-sm">
      <div class="modal-header bg-greenSea border-bottom-0">
        <h5 class="modal-title" id="staticBackdropLabel">Ajouter Materiel</h5>

        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <form
          class="row g-3 needs-validation"
          action="/materiels"
          id="personal"
          method="POST"
          autocomplete="off"
          novalidate
          enctype="multipart/form-data"
        >
          <!-- REF Input -->
          <div class="form-floating">
            <input
              id="materielcode"
              name="materiel[code]"
              type="text"
              class="form-control border-0 shadow-sm rounded-3"
              autofocus
              required
            />
            <label for="materielcode" class="form-label">REF</label>
            <div class="valid-feedback">BIEN</div>
          </div>

          <!-- Désignation Input -->
          <div class="form-floating">
            <input
              id="materieldesignation"
              name="materiel[designation]"
              style="text-transform: capitalize"
              type="text"
              class="form-control border-0 shadow-sm rounded-3"
              required
            />
            <label for="materielName" class="form-label">Désignation</label>
            <div class="valid-feedback">BIEN</div>
          </div>

          <!-- Picture Upload -->
          <div class="col-12 input-group mb-3">
            <input
              type="file"
              class="form-control"
              id="picture"
              name="picture"
              required
            />
            <label class="input-group-text" for="pictures"
              >Image</label
            >
          </div>

          <div class="modal-footer mt-4">
            <button
              type="button"
              class="btn btn-outline-lightCoral bg-gradient rounded-3"
              data-bs-dismiss="modal"
            >
              Annuler
            </button>
            <button class="btn btn-outline-greenSea rounded-3">Ajouter</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  $("#newmateriel").on("shown.bs.modal", function () {
    $(this).find("[autofocus]").focus();
  });
</script>

