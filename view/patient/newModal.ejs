<button
  id="item2"
  type="button"
  class="btn btn-outline-greenSea bg-gradient col-lg-2 col-md-2 col-sm-4 m-2"
  data-bs-toggle="modal"
  data-bs-target="#newPatient"
>
  Nouveau patient <i class="bi bi-person-plus-fill me-2"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="newPatient"
  tabindex="-1"
  aria-labelledby="newPatientLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-greenSea text-white">
        <h5 class="modal-title" id="newPatientLabel">
          <i class="bi bi-person-fill me-2"></i> Ajouter Patient
        </h5>
        <button
          type="button"
          class="btn-close btn-close-white"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form class="row g-3 needs-validation" novalidate>
          <!-- Relation -->
          <div class="form-floating col-md-6">
            <select
              id="patientRole"
              name="patient[relation]"
              class="form-select"
              required
            >
              <option disabled selected value="">Choisir relation</option>
              <option value="P√®re">P√®re</option>
              <option value="M√®re">M√®re</option>
              <option value="Fils">Fils</option>
            </select>
            <label for="patientRole"><i class="bi bi-people-fill me-2"></i>Relation</label>
            <div class="invalid-feedback">Veuillez s√©lectionner une relation.</div>
          </div>

          <!-- Nom et Pr√©nom -->
          <div class="form-floating col-md-6">
            <input
              type="text"
              class="form-control"
              id="patientLastName"
              name="patient[lastname]"
              required
            />
            <label for="patientLastName"><i class="bi bi-person me-2"></i>Nom</label>
            <div class="invalid-feedback">Le nom est obligatoire.</div>
          </div>
          <div class="form-floating col-md-6">
            <input
              type="text"
              class="form-control"
              id="patientFirstName"
              name="patient[firstname]"
              required
            />
            <label for="patientFirstName"><i class="bi bi-person me-2"></i>Pr√©nom</label>
            <div class="invalid-feedback">Le pr√©nom est obligatoire.</div>
          </div>

          <!-- P√®re -->
          <div class="form-floating col-md-6">
            <input
              type="text"
              class="form-control"
              id="father"
              name="patient[father]"
            />
            <label for="father"><i class="bi bi-person-circle me-2"></i>P√®re</label>
          </div>

          <!-- Date de Naissance -->
          <div class="form-floating col-md-6">
            <input
              type="date"
              class="form-control"
              id="patientBirthDate"
              name="patient[birthdate]"
              required
            />
            <label for="patientBirthDate"><i class="bi bi-calendar-event me-2"></i>Date de Naissance</label>
            <div class="invalid-feedback">Veuillez saisir une date valide.</div>
          </div>

          <!-- Groupe Sanguin et Rh√©sus -->
          <div class="form-floating col-md-6">
            <select
              id="bloodGroup"
              name="blood[groupe]"
              class="form-select"
              required
            >
              <option disabled selected value="">Groupe sanguin</option>
              <option value="A">A</option>
              <option value="B">B</option>
              <option value="AB">AB</option>
              <option value="O">O</option>
            </select>
            <label for="bloodGroup"><i class="bi bi-droplet me-2"></i>Groupe sanguin</label>
            <div class="invalid-feedback">Veuillez s√©lectionner un groupe sanguin.</div>
          </div>
          <div class="form-floating col-md-6">
            <select
              id="rhesus"
              name="blood[rhesus]"
              class="form-select"
              required
            >
              <option disabled selected value="">Rh√©sus</option>
              <option value="+">+</option>
              <option value="-">-</option>
            </select>
            <label for="rhesus"><i class="bi bi-droplet-half me-2"></i>Rh√©sus</label>
            <div class="invalid-feedback">Veuillez s√©lectionner un rh√©sus.</div>
          </div>

          <!-- T√©l√©phone -->
          <div class="form-floating col-md-6">
            <input
              type="text"
              class="form-control"
              id="patientPhoneNumber"
              name="patient[phone]"
              required
            />
            <label for="patientPhoneNumber"><i class="bi bi-telephone me-2"></i>T√©l√©phone 1</label>
            <div class="invalid-feedback">Num√©ro de t√©l√©phone requis.</div>
          </div>
          <div class="form-floating col-md-6">
            <input
              type="text"
              class="form-control"
              id="patientPhoneNumber2"
              name="patient[phone2]"
            />
            <label for="patientPhoneNumber2"><i class="bi bi-telephone me-2"></i>T√©l√©phone 2</label>
          </div>

          <!-- Genre -->
          <div class="form-floating col-md-6">
            <select id="patientGender" name="patient[gender]" class="form-select" required>
              <option selected disabled value="">Genre</option>
              <option value="Male">üë® Male</option>
              <option value="Female">üë© Female</option>
            </select>
            <label for="patientGender" class="form-label">
              <i class="bi bi-gender-ambiguous"></i> Genre
            </label>
            <div class="valid-feedback">BIEN</div>
          </div>

          <!-- Wilaya et Ville -->
          <div class="form-floating col-md-6">
            <input
              type="text"
              class="form-control"
              id="wilaya"
              name="patient[wilaya]"
              list="cities"
              placeholder="Wilaya"
              required
            />
            <label for="wilaya"><i class="bi bi-geo-alt me-2"></i>Wilaya</label>
            <div class="invalid-feedback">Veuillez s√©lectionner une wilaya.</div>
          </div>
          <div class="form-floating col-md-6">
            <select
              id="city"
              name="patient[city]"
              class="form-select"
              required
            >
              <option disabled selected value="">Ville</option>
            </select>
            <label for="city"><i class="bi bi-building me-2"></i>Ville</label>
            <div class="invalid-feedback">Veuillez s√©lectionner une ville.</div>
          </div>

          <!-- Buttons -->
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Annuler
            </button>
            <button type="submit" class="btn btn-greenSea">
              <i class="bi bi-check-circle me-2"></i>Ajouter
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
