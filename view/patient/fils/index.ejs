<button
  id="item2"
  type="button"
  class="btn btn-outline-warning bg-gradient ms-2"
  data-bs-toggle="modal"
  data-bs-target="#indexfils"
>
  <i class="fa-regular fa-rectangle-list fa-xl pe-1"></i
  ><i class="fa-solid fa-baby fa-xl"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="indexfils"
  data-bs-keyboard="true"
  tabindex="1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div
    class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl"
  >
    <div class="modal-content">
      <div class="modal-header">
        <img src="/assets/new patient.png" alt="" height="40px" />
        <h5 class="modal-title" id="staticBackdropLabel">
          Liste Fils & Foetus
        </h5>

        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>

      <div class="modal-body">
        <form class="d-flex mt-2 shadow-sm">
          <input
            id="search"
            class="form-control mb-2"
            type="search"
            placeholder="Rechercher"
            aria-label="Search"
            autofocus
          />
        </form>

        <div class="table-responsive shadow-sm rounded">
          <table
            class="table table-striped table-hover table-borderless text-center sortable"
            id="patientTable"
          >
            <thead class="table-greenSea shadow-sm">
              <tr>
                <th scope="col">N°</th>
                <th scope="col">Nom & prénom</th>
                <th scope="col">Age</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody id="tablebody">
              <% var i=1 %> <% for (p of patient.sons){%>
              <tr>
                <th
                  class="clickable"
                  onclick="window.location='/patient/<%=p.id%>'"
                  scope="row"
                >
                  <%= i%> <% i=i+1; %>
                </th>

                <td
                  class="clickable"
                  onclick="window.location='/patient/<%=p.id%>'"
                >
                  <%=p.fullname%>
                </td>
                <td
                  class="clickable"
                  onclick="window.location='/patient/<%=p.id%>'"
                >
                  <%=p.age%>
                </td>
                <th>
                  <form
                    class=""
                    id="delete-form"
                    action="/patient/<%=patient.id %>/son/<%=p.id%>?_method=DELETE"
                    method="POST"
                  >
                    <button class="btn btn-outline-lightCoral bg-gradient">
                      <i class="bi bi-trash-fill"></i>
                    </button>
                  </form>
                </th>
              </tr>
              <% }%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
