<% layout('layouts/boilerplate')%>

<div class="container-fluid mt-4">
  <div class="col m-auto">
    <h3 class="mb-4 text-center text-success">Liste des Foursnisseurs</h3>
    <div class="mb-3">
      <%- include("./new")%>
      <a
        class="btn btn-outline-secondary ms-2"
        href="/fournisseur/generatepdf"
        target="_blank"
        >Imprimer <i class="bi bi-printer-fill py-3 px-2"></i>
      </a>
    </div>

    <form class="d-flex">
      <input
        id="search"
        class="form-control mb-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
      />
    </form>

    <table
      class="table table-striped table-hover table-borderless text-center sortable"
    >
      <thead class="table-success">
        <tr>
          <th scope="col">N°</th>
          <th scope="col">Nom</th>
          <th scope="col">Wilaya</th>

          <th scope="col">Email</th>
          <th scope="col">Téléphone 1</th>
          <th scope="col">Téléphone 2</th>
          <th id="item1" scope="col">Action</th>
        </tr>
      </thead>
      <tbody id="tablebody">
        <% var i=1 %> <% for (fournisseur of fournisseurs){%>

        <tr>
          <th scope="row"><%= i%><% i=i+1; %></th>
          <td><%= fournisseur.name %></td>
          <td><%= fournisseur.wilaya %></td>

          <td><%=fournisseur.email%></td>
          <td><%=fournisseur.phone1%></td>
          <td><%=fournisseur.phone2%></td>
          <th>
            <div class="d-flex justify-content-center align-items-center">
              <%- include("./edit")%> <%- include("./delete")%>
            </div>
          </th>
        </tr>
        <% }%>
      </tbody>
    </table>
  </div>
</div>
