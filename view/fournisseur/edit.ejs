<button type="button" class="me-3 btn btn-outline-warning bg-gradient px-2 py-1" data-bs-toggle="modal"
  data-bs-target="#edit-<%= fournisseur.id %>">
  <i class="bi bi-pencil-fill"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="edit-<%= fournisseur.id %>" data-bs-keyboard="true" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">
          Modifier Fournisseur
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" required></button>
      </div>

      <div class="modal-body">
        <form class="row g-3 needs-validation" action="/fournisseur/<%= fournisseur.id %>/?_method=PUT" id="personal"
          method="POST" novalidate>
          <div class="form-floating col-md-6">
            <input id="name" name="fournisseur[name]" type="text" class="form-control"
              style="text-transform: capitalize" autofocus required value="<%= fournisseur.name %>" />
            <label for="name" class="form-label">Nom</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating col-md-6">
            <input class="form-control" id="wilaya" name="fournisseur[wilaya]" list="cities"
              onchange="makeSubmenu(this.value,'<%=fournisseur.id%>')" value="<%= fournisseur.wilaya %>" />
            <datalist id="cities">
              <option class="option" value="">Ville</option>
              <% for (city of states) { %>
              <option class="option" value="<%= city.name %>">
                <%= city.id + " - " + city.name %>
              </option>
              <%} %>
            </datalist>
            <label for="wilaya" class="form-label">Wilaya</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating col-md-6 mb-3">
            <select id="city<%=fournisseur._id%>" name="fournisseur[city]" class="form-select">
              <option class="option" value="" disabled selected>Ville</option>
              <option class="option" value="<%= fournisseur.city %>" selected>
                <%= fournisseur.city %>
              </option>
            </select>
            <label for="city<%=fournisseur.id%>" class="form-label">Ville</label>
            <div class="valid-feedback">BIEN</div>
          </div>


          <div class="form-floating col-md-6">
            <input type="text" class="form-control" id="phone1" name="fournisseur[phone]" maxlength="20"
              value="<%=fournisseur.phone%>" />
            <label for="phone1" class="form-label">Télephone</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating col-md-6">
            <input type="text" class="form-control" id="fax" name="fournisseur[fax]" maxlength="20"
              value="<%=fournisseur.fax%>" />
            <label for="fax" class="form-label">Fax</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="mt-3 row" id="phoneContaineredit">

          </div>


          <button type="button" class="btn btn-outline-primary bg-gradient col-md-2" id="addPhoneButtonedit">
            <i class="bi bi-plus-circle-fill"></i>
          </button>
          <div class="form-floating col-md-6">
            <input type="email" class="form-control" id="email" name="fournisseur[email]"
              style="text-transform: lowercase" value="<%= fournisseur.email %>" />
            <label for="email" class="form-label">Email</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating col-md-6">
            <input type="text" class="form-control" id="website" name="fournisseur[website]"
              value="<%= fournisseur.website %>" />
            <label for="website" class="form-label">Site Web</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <span>Données de facturation</span>
          <hr>
          <div class="form-floating col-md-6">
            <input type="text" class="form-control" id="nrc" name="fournisseur[nrc]" value="<%= fournisseur.nrc %>" />
            <label for="nrc" class="form-label">N° RC</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating col-md-6">
            <input type="text" class="form-control" id="nif" name="fournisseur[nif]" value="<%= fournisseur.nif %>" />
            <label for="nif" class="form-label">NIF</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating col-md-6">
            <input type="text" class="form-control" id="narticle" name="fournisseur[narticle]"
              value="<%= fournisseur.narticle %>" />
            <label for="narticle" class="form-label">N° Article</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating col-md-6">
            <input type="text" class="form-control" id="nis" name="fournisseur[nis]" value="<%= fournisseur.nis %>" />
            <label for="nis" class="form-label">NIS</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="modal-footer mt-3">
            <button type="button" class="btn btn-outline-lightCoral bg-gradient" data-bs-dismiss="modal">
              Annuler
            </button>
            <button type="submit" id="fournisseur-edit" class="btn btn-outline-warning bg-gradient">
              Modifier
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $("#edit-<%= fournisseur.id %>").on("shown.bs.modal", function () {
    $(this).find("[autofocus]").focus();
  });
</script>
<script>
  let mobiles = <%- JSON.stringify(fournisseur.mobile) %>
</script>