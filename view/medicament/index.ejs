<% layout('layouts/boilerplate')%>

<div class="container-fluid mt-4">
  <div class="col m-auto bg-light rounded-5 p-2">
    <h3 class="text-center text-success">Liste des Médicaments</h3>
    <div class="d-flex mb-2">
      <%- include("./new")%>
      <a
        class="btn btn-outline-secondary ms-2"
        href="/medicament/generatepdf"
        target="_blank"
        >Imprimer <i class="bi bi-printer-fill py-3 px-2"></i>
      </a>
    </div>
  </div>
  <form class="d-flex mt-2">
    <input
      id="search"
      class="form-control mb-2"
      type="search"
      placeholder="Search"
      aria-label="Search"
    />
  </form>
  <div class="table-responsive shadow-sm">
    <table
      class="table table-striped table-hover table-borderless text-center sortable"
      width="100"
      id="patientTable"
    >
      <thead class="table-success">
        <tr>
          <th scope="col">N°</th>
          <th scope="col">Nom Commercial</th>
          <th scope="col">DCI</th>
          <th scope="col">Dosage</th>
          <th scope="col">Form</th>
          <th scope="col">C.Therapeutique</th>
          <th scope="col">Laboratoire</th>
          
        </tr>
      </thead>
      <tbody id="tablebody">
        <% var i=1 %> <% for (medicament of medicaments){%>
        <tr>
          <th scope="row"><%= i%> <% i=i+1; %></th>
          <td style="overflow-wrap: break-word">
            <%= medicament.commercialname %>
          </td>
          <td><%=medicament.dci %></td>
          <td><%=medicament.dosage %></td>
          <td><%=medicament.form%></td>
          <td><%=medicament.therapeutique %></td>
          <td><%=medicament.laboratoire %></td>
        
        </tr>
        <% }%>
      </tbody>
    </table>
  </div>
</div>
