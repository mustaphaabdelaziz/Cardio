<% layout('layouts/boilerplate')%>

<div class="container-fluid mt-4">
  <div class="col m-auto">
    <h3 class="mb-4 text-center text-success">Liste des Utilisateurs</h3>
    <!-- <div class="mb-3">
      
    </div> -->

    <form class="d-flex">
      <input
        id="search"
        class="form-control mb-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
      />
    </form>
    <div class="table-responsive">
      <table
        class="table table-striped table-hover table-borderless text-center sortable"
      >
        <thead class="table-success">
          <tr>
            <th scope="col">NÂ°</th>
            <th scope="col">Nom utilisateur</th>
          
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Status</th>
            <th id="item1" scope="col">Action</th>
          </tr>
        </thead>
        <tbody id="tablebody">
          <% var i=1 %> <% for (user of users){%>
          <tr>
            <th scope="row"><%= i%><% i=i+1; %></th>
            <td><%= user.username %></td>
            <td><%=user.email %></td>
            <td><%=user.privileges[0] %></td>
            <% if (user.approved){%>
              <th class="p-3"><span class="rounded-pill badge bg-success bg-gradient">OUI</span></th>
              <%}else{%>
              <th class="p-3"><span class="rounded-pill badge bg-lightCoral bg-gradient">NON</span></th>
              <%}%>
            <th>
              <div class="d-flex justify-content-center align-items-center">
                <%- include("./edit")%> <%- include("./delete")%>
              </div>
            </th>
          </tr>
          <% }%>
        </tbody>
      </table>
    </div>
  </div>
</div>
