<% layout('layouts/boilerplate')%>
<div class="card border-0 profile-page">
  <img
    class="cover-profile mt-2"
    src="https://picsum.photos/510/502"
    alt=""
    height="1000"
  />
  <div class="container">
    <div class="d-flex flex-column justify-content-center align-items-center">
      <img
        class="photo"
        src="https://ui-avatars.com/api/?name=<%= user.firstname%>+<%= user.lastname%>&background=AAD4A6&color=000000&size=200&font-size=0.5&rounded=true&bold=true"
      />
      <div class="mt-2">
        <h4><%= user.fullname %></h4>
      </div>
    </div>

    <div class="row gy-5 my-3">
      <div class="col-12 col-md-12 col-lg-6">
        <div class="border-1 border-bottom py-3 ps-3">
          <i class="bi bi-envelope fs-3 text-primary"></i>
           <%= user.email %>
        </div>
        <div class="my-2 py-3 ps-3">
          <i class="bi bi-telephone fs-3 text-primary"></i>
           <%= user.phone %>
        </div>
      </div>

      <div class="col-12 col-md-12 col-lg-6 align-self-center">
        <div class="row">
          <div class="col-12 d-grid mt-3">
            <% if(!currentUser) {%> <% }else { %>
            <!-- if there is a loggedIn -->
            <% if(user.id != currentUser._id) {%> <% } else {%>
            <%-include("./editProfile")%> <% } %> <% } %>
          </div>
          <div class="col-12 d-flex justify-content-between text-center mt-3">
            <a href="" target="_blank"
              ><i class="portfolio fas fa-briefcase fs-3"></i
            ></a>
            <a href="" target="_blank"
              ><i class="linkedin bi bi-linkedin fs-3"></i
            ></a>
            <a href="" target="_blank"
              ><i class="twitter bi bi-twitter fs-3"></i
            ></a>
            <a href="" target="_blank"
              ><i class="facebook bi bi-facebook fs-3"></i
            ></a>
            <a href="" target="_blank"
              ><i class="instagram bi bi-instagram fs-3"></i
            ></a>
            <a href="" target="_blank"
              ><i class="youtube fab fa-youtube fs-3"></i
            ></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
