<% layout('layouts/boilerplate')%>
<div class="profile-page">
  <!-- Cover Image Section -->
  <div class="cover-section position-relative">
    <img
      src="https://picsum.photos/1920/500"
      alt="Cover Image"
      class="cover-image"
    />
    <div class="overlay position-absolute top-0 start-0 w-100 h-100"></div>
    <div class="profile-image-container">
      <img
        src="https://ui-avatars.com/api/?name=<%= user.firstname%>+<%= user.lastname%>&background=AAD4A6&color=000000&size=200&font-size=0.5&rounded=true&bold=true"
        alt="Profile Picture"
        class="profile-image shadow"
      />
    </div>
  </div>

  <!-- Main Content Section -->
  <div class="container">
    <!-- User Details -->
    <div class="text-center mt-5">
      <h1 class="user-name"><%= user.fullname %></h1>
      <p class="user-tagline">Professional Title or Tagline</p>
    </div>

    <!-- Contact Info Section -->
    <div class="row mt-4 gy-4">
      <!-- Personal Details -->
      <div class="col-md-6">
        <div class="card info-card shadow-sm">
          <div class="card-body">
            <div class="info-item">
              <i class="bi bi-envelope fs-4 text-primary"></i>
              <span><%= user.email %></span>
            </div>
            <div class="info-item">
              <i class="bi bi-telephone fs-4 text-primary"></i>
              <span><%= user.phone %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Action and Social Links -->
      <div class="col-md-6">
        <div class="card action-card shadow-sm">
          <div class="card-body">
            <!-- Edit Profile -->
            <% if (!currentUser) { %>
            <% } else { %>
            <% if (user.id != currentUser._id) { %>
            <% } else { %>
            <div class="mb-3">
              <%- include("./editProfile") %>
            </div>
            <% } %>
            <% } %>

            <!-- Social Links -->
            <div class="social-links d-flex justify-content-center gap-3 mt-3">
              <a href="#" class="social-icon text-primary" title="Portfolio">
                <i class="bi bi-briefcase"></i>
              </a>
              <a href="#" class="social-icon text-primary" title="LinkedIn">
                <i class="bi bi-linkedin"></i>
              </a>
              <a href="#" class="social-icon text-primary" title="Twitter">
                <i class="bi bi-twitter"></i>
              </a>
              <a href="#" class="social-icon text-primary" title="Facebook">
                <i class="bi bi-facebook"></i>
              </a>
              <a href="#" class="social-icon text-primary" title="Instagram">
                <i class="bi bi-instagram"></i>
              </a>
              <a href="#" class="social-icon text-primary" title="YouTube">
                <i class="bi bi-youtube"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Cover Section */
.cover-section {
  position: relative;
  height: 300px;
  background-color: #f0f0f0;
}

.cover-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.overlay {
  background: rgba(0, 0, 0, 0.5);
}

.profile-image-container {
  position: absolute;
  bottom: -50px;
  left: 50%;
  transform: translateX(-50%);
}

.profile-image {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border: 4px solid white;
}

/* Text Section */
.user-name {
  font-size: 2rem;
  font-weight: 700;
  color: #333;
}

.user-tagline {
  color: #777;
  font-size: 1rem;
}

/* Info Section */
.info-card, .action-card {
  border: none;
  border-radius: 10px;
  background: #fff;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 1rem;
}

.info-item i {
  margin-right: 10px;
}

.info-item span {
  font-size: 1.1rem;
  color: #555;
}

/* Social Links */
.social-links .social-icon {
  font-size: 1.5rem;
  transition: color 0.3s;
}

.social-links .social-icon:hover {
  color: #007bff;
}
</style>
