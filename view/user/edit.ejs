<button
  type="button"
  class="me-3 btn btn-outline-warning bg-gradient px-2 py-1"
  data-bs-toggle="modal"
  data-bs-target="#edit-<%= user.id %>"
>
  <i class="bi bi-pencil-fill"></i>
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="edit-<%= user.id %>"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modifier Personnel</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          required
        ></button>
      </div>

      <div class="modal-body">
        <form
          class="row g-3 needs-validation"
          action="/user/<%= user.id %>/?_method=PUT"
          id="personal"
          method="POST"
          novalidate
        >
          <div class="form-floating">
            <input
              id="username"
              name="user[username]"
              type="text"
              class="form-control"
              style="text-transform: capitalize"
              value="<%= user.username %>"
              required
              autofocus
            />
            <label for="username" class="form-label">Nom Utilisateur</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="form-floating">
            <div class="d-flex align-item-start form-check form-switch ms-2">
              <% if (user.approved){%>
              <input
                class="form-check-input me-2"
                type="checkbox"
                name="user[approved]"
                role="switch"
                id="externe"
                checked
              />
              <% }else{ %>
              <input
                class="form-check-input me-2"
                type="checkbox"
                name="user[approved]"
                role="switch"
                id="externe"
              />
              <% } %>
              <label class="form-check-label" for="externe">Approv√©</label>
              <div class="valid-feedback">BIEN</div>
            </div>
          </div>

          <div class="form-floating">
            <input
              type="text"
              class="form-control"
              style="text-transform: lowercase"
              id="stafemail"
              name="user[email]"
              value="<%= user.email %>"
            />
            <label for="email" class="form-label">Email</label>
            <div class="valid-feedback">BIEN</div>
          </div>
          <div class="modal-footer mt-3">
            <button
              type="button"
              class="btn btn-outline-danger bg-gradient"
              data-bs-dismiss="modal"
            >
              Annuler
            </button>
            <button
              type="submit"
              id="user-edit"
              class="btn btn-outline-warning bg-gradient"
            >
              Modifier
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
  $("#edit-<%= user.id %>").on("shown.bs.modal", function () {
    $(this).find("[autofocus]").focus();
  });
</script>
