<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="x-icon" href="/assets/logo.png" />
    <title>Oasis Cardiologie</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/carousel.css" />
    <link rel="stylesheet" href="/css/userProfile.css" />
    <link rel="stylesheet" href="/css/color.css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css"
    />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script
      type="text/javascript"
      src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
    ></script>
    <script>
      $(document).ready(function () {
        $("#search").on("keyup", function () {
          var value = $(this).val().toLowerCase();
          $("#tablebody tr").filter(function () {
            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
          });
        });
      });
    </script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.5/pdfmake.min.js"
      integrity="sha512-rDbVu5s98lzXZsmJoMa0DjHNE+RwPJACogUCLyq3Xxm2kJO6qsQwjbE5NDk2DqmlKcxDirCnU1wAzVLe12IM3w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.5/vfs_fonts.min.js"
      integrity="sha512-BDZ+kFMtxV2ljEa7OWUu0wuay/PAsJ2yeRsBegaSgdUhqIno33xmD9v3m+a2M3Bdn5xbtJtsJ9sSULmNBjCgYw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="https://unpkg.com/scrollreveal"></script>
  </head>

  <body class="d-flex flex-column">
    <main class="">
      <%- include("../partials/flash")%>
      <div class="container">
        <div class="card my-5">
          <div class="row">
            <div class="col-12">
              <div class="d-flex flex-column align-items-center my-5">
                <a href="/">
                  <img src="/assets/logo.png" alt="" height="100px" />
                </a>
              </div>
            </div>
            <div class="col-12">
              <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                  <button
                    id="userLoginTab"
                    data-bs-target="#userLoginForm"
                    data-bs-toggle="tab"
                    role="tab"
                    class="nav-link active"
                    aria-controls="userLoginForm"
                    aria-selected="true"
                  >
                    Login <i class="bi bi-box-arrow-in-right"></i>
                  </button>
                </li>
                <li class="nav-item">
                  <button
                    id="userRegisterTab"
                    data-bs-target="#userRegisterForm"
                    data-bs-toggle="tab"
                    role="tab"
                    class="nav-link"
                    aria-controls="userRegisterForm"
                    aria-selected="false"
                  >
                    Register <i class="bi bi-person-plus-fill"></i>
                  </button>
                </li>
              </ul>
            </div>
          </div>
          <div class="row">
            <div class="tab-content">
              <div
                aria-labelledby="userLoginTab"
                role="tabpanel"
                class="px-5 my-5 tab-pane fade active show"
                id="userLoginForm"
              >
                <h3 class="my-5 text-center text-primary">Login</h3>
                <form
                  action="/user/login"
                  method="POST"
                  class="needs-validation"
                  novalidate
                >
                  <div class="mb-3">
                    <label for="userLoginEmail" class="form-label"
                      >Email
                    </label>
                    <input
                      type="email"
                      class="form-control"
                      name="username"
                      id="userLoginEmail"
                      placeholder="name@example.com"
                      style="text-transform: lowercase"
                      required
                    />
                    <div class="valid-feedback">BIEN</div>
                  </div>
                  <div class="mb-3">
                    <label for="userLoginPassword" class="form-label"
                      >Password</label
                    >
                    <input
                      type="password"
                      class="form-control"
                      id="userLoginPassword"
                      name="password"
                      placeholder="Password"
                      required
                    />
                    <div class="valid-feedback">BIEN</div>
                  </div>
                  <div class="mb-3 text-center">
                    <button
                      type="submit"
                      id="user-submit"
                      class="btn btn-outline-primary bg-gradient bg-opacity-25"
                    >
                      Login <i class="bi bi-box-arrow-in-right ms-2"></i>
                    </button>
                  </div>
                </form>
              </div>
              <!-- ============================= Register =============================================== -->
              <div
                aria-labelledby="userRegisterTab"
                role="tabpanel"
                class="px-5 my-5 tab-pane fade"
                id="userRegisterForm"
              >
                <h3 class="my-5 text-center text-primary">Register</h3>
                <form
                  class="row g-3 needs-validation"
                  action="/user/register"
                  id="personal"
                  method="POST"
                  novalidate
                >
                  <div class="form-floating col-6 mb-3">
                    <input
                      id="lastname"
                      name="user[lastname]"
                      type="text"
                      class="form-control"
                      style="text-transform: capitalize"
                      autofocus
                      required
                    />
                    <label for="lastname" class="form-label">Nom</label>
                    <div class="valid-feedback">BIEN</div>
                  </div>

                  <div class="form-floating col-6 mb-3">
                    <input
                      id="firstName"
                      name="user[firstname]"
                      style="text-transform: capitalize"
                      type="text"
                      class="form-control"
                    />
                    <label for="firstName" class="form-label"
                      >Prénom</label
                    >
                    <div class="valid-feedback">BIEN</div>
                  </div>
                  <div class="form-floating">
                    <select
                      id="fonction"
                      name="user[fonction]"
                      class="form-select"
                      required
                    >
                      <option selected disabled value="">Fonction</option>
                      <option class="option" value="Medecin">Médecin</option>
                      <option class="option" value="technicien cathlab">
                        Technicien cathlab
                      </option>
                      <option class="option" value="assitant(e) Medicale">
                        Assitant(e) Medical(e)
                      </option>
                    </select>
                    <label for="fonction" class="form-label"
                      >Fonction</label
                    >
                    <div class="valid-feedback">BIEN</div>
                  </div>
                  <div class="form-floating">
                    <div class="form-check form-switch ms-2">
                      <input
                        class="form-check-input"
                        type="checkbox"
                        name="user[externe]"
                        value="externe"
                        role="switch"
                        id="externe"
                      />
                      <label class="form-check-label" for="externe"
                        >Externe</label
                      >
                      <div class="valid-feedback">BIEN</div>
                    </div>
                  </div>
                  <div class="form-floating">
                    <input
                      type="text"
                      class="form-control"
                      id="phone"
                      name="user[phone]"
                      maxlength="10"
                    />
                    <label for="phone" class="form-label">Télephone</label>
                    <div class="valid-feedback">BIEN</div>
                  </div>

                  <div class="col-md-6">
                    <label for="email" class="form-label">Email %></label>
                    <input
                      id="email"
                      placeholder="name@example.com"
                      name="user[email]"
                      type="email"
                      class="form-control"
                      required
                    />
                    <div class="valid-feedback">BIEN</div>
                  </div>
                  <div class="col-md-6">
                    <label for="userPassword" class="form-label"
                      >Mot de pass</label
                    >
                    <input
                      id="userPassword"
                      placeholder="Mot de pass"
                      type="password"
                      class="form-control"
                      name="user[password]"
                      required
                    />
                    <div class="valid-feedback">BIEN</div>
                  </div>
                  <!-- <div class="col-md-6">
                    <label for="confirmedPassword" class="form-label"
                      >Confirmé Mot de pass</label
                    >
                    <input
                      id="confirmedPassword"
                      placeholder="Confirmé Mot de pass"
                      type="password"
                      class="form-control"
                      name="user[confirmedPassword]"
                      required
                    />
                    <div class="valid-feedback">BIEN</div>
                  </div> -->
                  <div class="mb-3 text-center">
                    <button
                      type="submit"
                      id="user-register"
                      class="btn btn-outline-primary bg-gradient bg-opacity-25"
                    >
                      Register <i class="bi bi-person-plus-fill ms-2"></i>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment-with-locales.min.js"
      integrity="sha512-vFABRuf5oGUaztndx4KoAEUVQnOvAIFs59y4tO0DILGWhQiFnFHiR+ZJfxLDyJlXgeut9Z07Svuvm+1Jv89w5g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/underscore@1.13.4/underscore-umd-min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script async src="/js/validate-form.js"></script>
    <script src="/js/sorttable.js"></script>
    <script src="/js/filter.js"></script>
    <script src="/js/print.js"></script>
    <script src="/js/toggleInput.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init();
      ScrollReveal().reveal(".headline");
    </script>
  </body>
</html>
