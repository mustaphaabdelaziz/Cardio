<% layout('layouts/boilerplate')%>

<div class="container mt-4">
  <div class="col m-auto">
    <h3 class="mb-4 text-center text-success">Liste des personnels</h3>
    <div class="mb-3"><%- include("./new")%></div>
    <form class="d-flex">
      <input
        id="search"
        class="form-control mb-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
      />
    </form>
    <table
      class="table table-striped table-hover table-borderless text-center sortable"
    >
      <thead class="table-success">
        <tr>
          <th scope="col">N°</th>
          <th scope="col">Nom</th>
          <th scope="col">Prénom</th>
          <th scope="col">Fonction</th>
          <th scope="col">Email</th>
          <th scope="col">Téléphone</th>
          <th id="item1" scope="col">Action</th>
        </tr>
      </thead>
      <tbody id="tablebody">
        <% var i=1 %> <% for (staff of staffs){%>

        <tr>
          <th
            class="clickable"
            onclick="window.location='/staffs/<%=staff.id%>'"
            scope="row"
          >
            <%= i%><% i=i+1; %>
          </th>
          <td
            class="clickable"
            onclick="window.location='/staffs/<%=staff.id%>'"
          >
            <%= staff.lastname.toUpperCase()%>
          </td>
          <td
            class="clickable"
            onclick="window.location='/staffs/<%=staff.id%>'"
          >
            <%=staff.firstname.toUpperCase()%>
          </td>
          <td
            class="clickable"
            onclick="window.location='/staffs/<%=staff.id%>'"
          >
            <%=staff.typestuff.toUpperCase()%> 
          </td>
          <td
          class="clickable"
          onclick="window.location='/staffs/<%=staff.id%>'"
        >
          <%=staff.email%>
        </td>
          <td
            class="clickable"
            onclick="window.location='/staffs/<%=staff.id%>'"
          >
            <%=staff.phone%>
          </td>
          <th>
            <div class="d-flex justify-content-center align-items-center">
              <%- include("./edit")%> <%- include("./delete")%>
            </div>
          </th>
        </tr>
        <% }%>
      </tbody>
    </table>
  </div>
</div>
